@model DAWeb.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayoutAdmin.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-red">
                <div class="panel-heading">
                    Xóa user
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <h3>Bạn muốn xóa user này?</h3>
                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Meta)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Meta)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Hide)
                            </dt>

                            <dd>
                                @(Model.Hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Order)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Order)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Datebegin)
                            </dt>

                            <dd>
                                @(Model.Datebegin.HasValue ? Model.Datebegin.Value.ToString("dd/MM/yyyy") : "")
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Quay lại", "Index")
                            </div>
                        }
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
