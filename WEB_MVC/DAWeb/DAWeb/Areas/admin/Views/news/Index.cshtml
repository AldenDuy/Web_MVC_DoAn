@using DAWeb.Help
@model IEnumerable<DAWeb.Models.New>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayoutAdmin.cshtml";
}

<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>

@section _Header
{
    <!-- DataTables CSS -->
    <link href="/Areas/admin/ContentAdmin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="/Areas/admin/ContentAdmin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Quản lý tin tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p style="text-align:right">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span> Thêm mới", "Create", "Create", "News", routeValues: new { }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                </p>
                <table class="table table-striped table-bordered table-hover" id="dataTables-example" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                                Hình
                            </th>
                            <th>
                                Hiển thị
                            </th>
                            <th>
                                Vị trí
                            </th>
                            <th>
                                Ngày cập nhật
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var Number = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.Raw(Number++)
                                </td>
                                <td style="text-align:left; white-space:nowrap">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    <img src="~/Content/images/@item.Images" width="100px" />
                                </td>


                                <td>
                                    <!--Html.DisplayFor(modelItem => item.hide)-->
                                    @(item.Hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Order)
                                </td>
                                <td>
                                    <!--Html.DisplayFor(modelItem => item.datebegin)-->
                                    @(item.Datebegin.HasValue ? item.Datebegin.Value.ToString("dd/MM/yyyy") : "")
                                </td>
                                <td>
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span> Sửa", "Edit", "Edit", "News", routeValues: new { id = item.IdNew }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span> Chi tiết", "Detail", "Details", "News", routeValues: new { id = item.IdNew }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span> Xóa", "Delete", "Delete", "News", routeValues: new { id = item.IdNew }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })


                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section _Footer
{
    <!-- DataTables JavaScript -->
    <script src="/Areas/admin/ContentAdmin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/admin/ContentAdmin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Areas/admin/ContentAdmin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>

}
