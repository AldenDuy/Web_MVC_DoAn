@model DAWeb.Models.New

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_MyLayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-red">
            <div class="panel-heading">
                Chi tiết Tin tức
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Images)
                    </dt>

                    <dd>
                        <img src="~/Content/images/@Model.Images" width="150px" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Decription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Decription)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TitleSp)
                    </dt>

                    <dd>

                        @Html.Raw(Model.TitleSp)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Meta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Meta)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Hide)
                    </dt>

                    <dd>
                        @(Model.Hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Order)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Order)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Datebegin)
                    </dt>

                    <dd>
                        @(Model.Datebegin.HasValue ? Model.Datebegin.Value.ToString("dd/MM/yyyy") : "")
                    </dd>

                </dl>

                <p>
                    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.IdNew }) |
                    @Html.ActionLink("Quay lại", "Index")
                </p>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
